<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products"
    android:background="@color/interfaceColor">
    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Manufacture Products"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardAvailable"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:layout_below="@+id/lblTitle"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/interfaceDColor"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/AvailRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTitle"
                android:gravity="center"
                android:padding="0dp"
                android:text="Available for sale"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/AvailableProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AvailRes"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1"
                    android:textColor="@color/positive"
                    android:textSize="45sp"
                    android:textStyle="bold" />



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lblAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CardAvailable"
        android:layout_marginTop="80dp"
        android:background="@color/interfaceDColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="Product Details"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblAvaileble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAdd"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="Material Available"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AvailableValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAvaileble"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="240 M"
        android:textColor="@color/positive"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMeasurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AvailableValue"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/interfaceDColor"
        android:text="How Much Material will be used?"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtMeasurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblMeasurement"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="0dp"
        android:background="#30a6a6a6"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="insert amount"
        android:padding="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/txtMeasurement"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/interfaceDColor"
        android:padding="10sp"
        android:text="Add Product"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@id/btnAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/interfaceDColor"
        android:padding="10sp"
        android:text="Go back"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>